<?php

class Plateau
{

	private $cellulesPlateau = array(array());
	// http://www.apprendre-php.com/tutoriels/tutoriel-7-les-tableaux-ou-arrays.html

	function __construct()
	{

		for ($x = 1; $x <= 5; $x++)
		{	
			$this.$cellulesPlateau = array
			(
				array($x, 1),
				array($x, 2),
				array($x, 3),
				array($x, 4),
				array($x, 5)

				//for ($y = 1; $y <= 5; $y++)
				//{
					//array(new Cellule($x, $y));
					//array($x, $y);
				//}
			);
		}
	
		
	}
}

